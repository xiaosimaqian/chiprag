{
    "name": "ollama_llm",
    "version": "1.0.0",
    "description": "Ollama LLM 配置",
    
    "models": {
        "default": {
            "name": "llama2:latest",
            "base_url": "http://localhost:11434",
            "temperature": 0.7,
            "max_tokens": 1000,
            "top_p": 0.9,
            "top_k": 40,
            "repetition_penalty": 1.1,
            "stop_sequences": ["", "Human:", "Assistant:"],
            "context_window": 4096,
            "timeout": 30,
            "retry_attempts": 3,
            "retry_delay": 1
        },
        "code": {
            "name": "deepseek-coder:latest",
            "base_url": "http://localhost:11434",
            "temperature": 0.2,
            "max_tokens": 2000,
            "top_p": 0.95,
            "top_k": 50,
            "repetition_penalty": 1.2,
            "stop_sequences": ["", "Human:", "Assistant:", "```"],
            "context_window": 8192,
            "timeout": 60,
            "retry_attempts": 3,
            "retry_delay": 1
        },
        "layout": {
            "name": "llama2:latest",
            "base_url": "http://localhost:11434",
            "temperature": 0.3,
            "max_tokens": 1500,
            "top_p": 0.9,
            "top_k": 40,
            "repetition_penalty": 1.1,
            "stop_sequences": ["", "Human:", "Assistant:", "```"],
            "context_window": 4096,
            "timeout": 45,
            "retry_attempts": 3,
            "retry_delay": 1
        }
    },
    
    "prompts": {
        "system": "你是一个专业的芯片布局设计助手，擅长分析电路结构并生成高质量的布局方案。",
        "code_generation": "请根据以下电路描述生成对应的布局代码：\n{circuit_description}",
        "layout_analysis": "请分析以下布局方案的质量和优化空间：\n{layout_description}",
        "constraint_check": "请检查以下布局是否满足所有约束条件：\n{constraints}\n{layout}"
    },
    
    "cache": {
        "enabled": true,
        "type": "memory",
        "max_size": 1000,
        "ttl": 3600,
        "storage_path": "cache/llm"
    },
    
    "logging": {
        "level": "INFO",
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
        "file": "logs/llm.log",
        "max_size": 10485760,
        "backup_count": 5
    },
    
    "monitoring": {
        "enabled": true,
        "interval": 60,
        "metrics": [
            "latency",
            "throughput",
            "error_rate",
            "token_usage"
        ],
        "alerts": [
            {
                "type": "latency",
                "threshold": 1000,
                "action": "alert"
            },
            {
                "type": "error_rate",
                "threshold": 0.01,
                "action": "alert"
            }
        ]
    },
    
    "error_handling": {
        "retry_strategy": "exponential_backoff",
        "max_retries": 3,
        "base_delay": 1,
        "max_delay": 10,
        "timeout": 30
    },
    
    "performance": {
        "batch_size": 32,
        "num_workers": 4,
        "timeout": 30,
        "cache_size": 1000
    }
}